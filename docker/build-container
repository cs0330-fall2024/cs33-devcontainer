#! /bin/bash

cd `dirname $0`

arch=`uname -m`
tag=
platform=

if test "$arch" = "arm64" -o "$arch" = "aarch64"; then
    platform=linux/arm64
    tag=cs33:arm64
else
    platform=linux/amd64
    tag=cs33:latest
fi
docker ps -a -q --filter "name=cs33-persistent" | xargs -r docker rm
docker images | grep "cs33" | awk '{print $1":"$2}' | xargs -r docker rmi

dockerfile=Dockerfile
if test "$platform" = "linux/arm64"; then
    dockerfile=Dockerfile.arm64
fi

exec docker build -t "$tag" -f "$dockerfile" --platform "$platform" .